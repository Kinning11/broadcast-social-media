<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BroadcastSocialMedia</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BroadcastSocialMedia.styles.css" asp-append-version="true" />
</head>

<body>

    <!-- NAVBAR -->
    <header>
        <nav class="navbar navbar-expand-sm custom-navbar">
            <div class="container-fluid">
                <a class="navbar-brand"
                   asp-controller="Home"
                   asp-action="Index">
                    BroadcastSocialMedia
                </a>

                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse justify-content-center">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Home"
                               asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Trending"
                               asp-action="Index">Trending</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Recommend"
                               asp-action="Index">Recommended</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Home"
                               asp-action="Privacy">Privacy</a>
                        </li>

                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- MAIN CONTENT -->
    <main">
        <div class="container pb-4">
            @RenderBody()
        </div>
    </main>

    <!-- FOOTER -->
    <footer class="footer border-top text-muted">
        <div class="container text-center">
            &copy; 2026 - BroadcastSocialMedia -
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- SCRIPTS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>